<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent" android:layout_height="fill_parent"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:addStatesFromChildren="true"
        android:layout_weight=".02"
        android:background="#99ccff"
        android:gravity="left"
        android:paddingRight="0dip" >
        <TextView android:text="Head Tracking:"
            android:id="@+id/textviewID2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight=".14"
            android:background="#99ccff"
            android:gravity="left"
            android:textColor="#000"></TextView>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".4"
            android:orientation="vertical">
            <Button
                android:id="@+id/buttonID2DeviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:addStatesFromChildren="true"
        android:layout_weight=".14"
        android:background="#ff6666"
        android:gravity="left"
        android:paddingRight="0dip" >

    <TextView android:text="Left Controller:"
        android:id="@+id/textviewID0"
        android:layout_height="wrap_content"
        android:background="#ff6666"
        android:layout_width="fill_parent"
        android:layout_weight=".14"
        android:gravity="left"
        android:textColor="#000"></TextView>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".4"
            android:orientation="vertical">
            <Button
                android:id="@+id/buttonID0DeviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                />
            <Button
                android:id="@+id/buttonID0VibratorStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                />
            <Button
                android:id="@+id/buttonID0VibratorStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                />
            <Button
                android:id="@+id/buttonID0Recenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recenter"
                />
            <Button
                android:id="@+id/buttonID0Battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:addStatesFromChildren="true"
        android:layout_weight=".14"
        android:background="#ccff99"
        android:gravity="left"
        android:paddingRight="0dip" >

        <TextView android:text="Right Controller:"
            android:id="@+id/textviewID1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight=".15"
            android:background="#ccff99" android:gravity="left"
            android:textColor="#000"></TextView>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".4"
            android:orientation="vertical">
            <Button
                android:id="@+id/buttonID1DeviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                />
            <Button
                android:id="@+id/buttonID1VibratorStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                />
            <Button
                android:id="@+id/buttonID1VibratorStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                />
            <Button
                android:id="@+id/buttonID1Recenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recenter"
                />
            <Button
                android:id="@+id/buttonID1Battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>